                <% end %>
              </select>

              <select class="ui search dropdown" name =<%=(:taizai2_m)%>>
                <% 0.step(50, 10) do |m| %>
                  <option value="<%=m%>"><%=m%>分</option> 
                <% end %>
              </select>
        </div>
      </div>
      


    </br>
    <%= submit_tag("検索する", :class=>"btn btn-secondary btn-lg")%>
  <% end %>
</div>

